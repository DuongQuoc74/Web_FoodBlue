@model eShopSolution.ViewModel.System.Users.RegisterRequest

@{
    ViewData["Title"] = "RegisterUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" localize-content>Create new users</h4>
            <p class="card-description"localize-content>Please fill in the information below!</p>
            <form asp-action="Register" asp-controller="User" method="post" class="forms-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="exampleInputUsername1" localize-content>User name</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
                </div> 
                <div class="form-group">
                    <label for="exampleInputUsername1" localize-content>Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1" localize-content>Comfirm Password</label>
                    <input asp-for="ComfirmPassword" type="password" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1" localize-content>First name</label>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1" localize-content>Last name</label>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="LastName">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1" localize-content>Dob</label>
                    <input asp-for="Dob" type="date" class="form-control" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" localize-content>Email</label>
                    <input asp-for="Email" type="email" class="form-control"  placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1" localize-content>Phone number</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Password">
                </div>
                <input type="submit" value="Ok" class="btn btn-primary mr-2">
               @* <button class="btn btn-light">Cancel</button>*@
            </form>
        </div>
    </div>
</div>




